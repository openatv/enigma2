<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<skin>
	<windowstyle id="1" type="skinned">
		<color color="#000000" name="Background"/>
		<color color="#ffffff" name="LabelForeground"/>
		<color color="#000000" name="ListboxBackground"/>
		<color color="#ffffff" name="ListboxForeground"/>
		<color color="#000000" name="ListboxSelectedBackground"/>
		<color color="#ffffff" name="ListboxSelectedForeground"/>
		<color color="#000000" name="ListboxMarkedBackground"/>
		<color color="#ffffff" name="ListboxMarkedForeground"/>
		<color color="#000000" name="ListboxMarkedAndSelectedBackground"/>
		<color color="#ffffff" name="ListboxMarkedAndSelectedForeground"/>
		<color color="#ffffff" name="WindowTitleForeground"/>
		<color color="#000000" name="WindowTitleBackground"/>
	</windowstyle>
	<fonts>
		<!-- pick a funky name for the font, so we don't conflict  -->
		<font filename="nmsbd.ttf" name="FdLcD" scale="100"/>
		<font filename="/usr/share/fonts/lcd.ttf" name="LCD" scale="100"/>
		<font filename="/usr/share/enigma2/GigabluePax/fonts/OpenSans-Regular.ttf" name="RegularLCD" scale="95"/>
	</fonts>

<!-- template -->
	<screen name="SummaryClockPanel">
		<widget source="global.CurrentTime" render="Label" position="95,135" size="120,50" font="RegularLCD;50" halign="right" valign="bottom" noWrap="1">
			<convert type="ClockToText"></convert>
		</widget>
	</screen>

<!-- main-->
	<screen name="InfoBarSummary" position="fill" >
		<widget source="session.CurrentService" render="PiconLCD" zPosition="1" position="110,10" size="100,60" alphatest="on" >
			<convert type="ServiceName">Reference</convert>
		</widget>
		<widget source="session.Event_Now" render="Label" position="0,80" size="220,55" font="RegularLCD;22" halign="center" >
			<convert type="EventName">Name</convert>
		</widget>
		<eLabel text="TUNER:" position="0,150" size="75,25" halign="Left" font="RegularLCD;20" />
		<widget source="session.FrontendInfo" render="FixedLabel" position="75,143" size="20,30" text="A" foregroundColor="#04B404" font="RegularLCD;30" halign="center" >
			<convert type="FrontendInfo">NUMBER</convert>
			<convert type="ValueRange">0,0</convert>
			<convert type="ConditionalShowHide" />
		</widget>
		<widget source="session.FrontendInfo" render="FixedLabel" position="75,143" size="20,30" text="B" foregroundColor="#04B404" font="RegularLCD;30" halign="center" >
			<convert type="FrontendInfo">NUMBER</convert>
			<convert type="ValueRange">1,1</convert>
			<convert type="ConditionalShowHide" />
		</widget>
		<widget source="session.FrontendInfo" render="FixedLabel" position="75,143" size="20,30" text="C" foregroundColor="#04B404" font="RegularLCD;30" halign="center" >
			<convert type="FrontendInfo">NUMBER</convert>
			<convert type="ValueRange">2,2</convert>
			<convert type="ConditionalShowHide" />
		</widget>
		<widget source="session.FrontendInfo" render="FixedLabel" position="75,143" size="20,30" text="D" foregroundColor="#04B404" font="RegularLCD;30" halign="center" >
			<convert type="FrontendInfo">NUMBER</convert>
			<convert type="ValueRange">3,3</convert>
			<convert type="ConditionalShowHide" />
		</widget>
		<widget source="session.RecordState" render="FixedLabel" text="Recording" position="0,120" size="110,25" halign="Left" foregroundColor="#ff0000" font="RegularLCD;20" zPosition="1" noWrap="1" >
			<convert type="ConditionalShowHide">Blink</convert>
		</widget>
		<panel name="SummaryClockPanel" />
	</screen>
	<include filename="/usr/share/enigma2/lcd_skin/common.xml" />
</skin>
